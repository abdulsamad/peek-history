{
	"manifest_version": 2,
	"name": "Peek History",
	"description": "A simple extension for quickly peeking history, restoring sessions and prevent certain ðŸ•µ websites to open in normal tab.",
	"version": "1.0.0",
	"browser_action": {
		"default_popup": "./popup.html",
		"default_icon": "./assets/icon128.png",
		"default_title": "Peek History"
	},
	"permissions": ["chrome://favicon/*", "fontSettings", "tabs", "history", "storage", "sessions"],
	"optional_permissions": ["http://*/*", "https://*/*", "webRequestBlocking", "webRequest"],
	"options_page": "options.html",
	"background": {
		"scripts": ["background.js"],
		"persistant": true
	},
	"icons": {
		"128": "./assets/icon128.png",
		"48": "./assets/icon48.png",
		"32": "./assets/icon32.png",
		"16": "./assets/icon16.png"
	},
	"web_accessible_resources": ["icon128.png", "icon32.png"],
	"incognito": "not_allowed",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+H",
				"mac": "MacCtrl+Shift+H"
			},
			"description": "Quickly toggles Peek History"
		}
	}
}
