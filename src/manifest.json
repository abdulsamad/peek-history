{
	"manifest_version": 2,
	"name": "Simple History",
	"description": "A simple and minimal extension for quickly peeking and managing history.",
	"version": "0.8.0",
	"browser_action": {
		"default_popup": "./popup.html",
		"default_icon": "./assets/icon.png",
		"default_title": "Simple History"
	},
	"icons": {
		"128": "./assets/icon.png",
		"64": "./assets/icon.png",
		"32": "./assets/icon.png"
	},
	"permissions": ["history", "tabs"],
	"options_page": "options.html",
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+H",
				"mac": "MacCtrl+Shift+H"
			},
			"description": "Quickly toggles Simple History"
		}
	}

}