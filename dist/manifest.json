{
	"manifest_version": 2,
	"name": "Simple History",
	"description": "A simple and minimal extension for quickly peeking and managing history.",
	"version": "0.8.5",
	"browser_action": {
		"default_popup": "./popup.html",
		"default_icon": "./assets/icon-128x128.png",
		"default_title": "Simple History"
	},
	"icons": {
		"128": "./assets/icon-128x128.png",
		"48": "./assets/icon-48x48.png",
		"32": "./assets/icon-32x32.png",
		"16": "./assets/icon-16x16.png"
	},
	"permissions": ["chrome://favicon/*", "fontSettings", "history", "storage"],
	"optional_permissions": ["http://*/*", "https://*/*", "tabs", "webRequestBlocking", "webRequest"],
	"options_page": "options.html",
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistant": true
	},
	"incognito": "not_allowed",
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+H",
				"mac": "MacCtrl+Shift+H"
			},
			"description": "Quickly toggles Simple History"
		}
	}

}